{{#if (includes methods 'GET')}}
/**
 * Handle GET requests to fetch {{routeName}}
 * Optional query parameters for filtering, pagination, and sorting
 * 
 * @async
 * @function GET
 * @param {Request} request - The incoming request object
 * @returns {Promise<NextResponse>} JSON response with {{routeName}} data or error
 * 
 * @example
 * // Get all {{routeName}} with pagination
 * GET /api/{{routeName}}?page=1&limit=10&sort=name&order=asc
 */
export async function GET(request) {
  try {
    // Connect to database
    await connectDB();
    
    // Get query parameters
    const { searchParams } = new URL(request.url);
    const page = parseInt(searchParams.get('page') || '1');
    const limit = parseInt(searchParams.get('limit') || '10');
    const sort = searchParams.get('sort') || 'createdAt';
    const order = searchParams.get('order') === 'asc' ? 1 : -1;
    const search = searchParams.get('search') || '';
    
    // Calculate pagination
    const skip = (page - 1) * limit;
    
    // Build query
    let query = {};
    
    // Add search if provided
    if (search) {
      query = {
        $or: [
          { name: { $regex: search, $options: 'i' } },
          { description: { $regex: search, $options: 'i' } }
        ]
      };
    }
    
    // Get {{routeName}} with pagination
    const [items, total] = await Promise.all([
      {{pascalCase modelName}}
        .find(query)
        .sort({ [sort]: order })
        .skip(skip)
        .limit(limit),
      {{pascalCase modelName}}.countDocuments(query)
    ]);
    
    // Return success response
    return NextResponse.json({
      success: true,
      data: {
        {{routeName}}: items,
        pagination: {
          total,
          page,
          limit,
          pages: Math.ceil(total / limit)
        }
      }
    });
  } catch (error) {
    console.error('API error:', error);
    return NextResponse.json(
      { success: false, error: error.message },
      { status: 500 }
    );
  }
}
{{/if}}

